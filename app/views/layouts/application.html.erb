  <!-- Staging app id
  <script data-app-id="qFJ56TQjWOJR6bwUrWzfzA" src="https://assets.staging.yammer.com/platform/yam.js"></script> -->

  <script type="text/javascript">
    var loadDelay = 30000;
    var showDelay = 3000;
    var messageLimit = 10;
    var lastMessageId = 0;
    var count = 3000;
    
    yam.getLoginStatus( function (response) {
      if (response.authResponse) {     
        login();
      } else {
		$('#landing').removeClass('hidden');
        yam.connect.loginButton('#yammer-login', function (response) {
          if (response.authResponse) {
            login();
          }
        });
      }   
    });
    
    //Settings dialog code
    $(document).ready(function(){
		var group = $('#group'),
			topic = $('#topic'),
			logoUrl = $('#logoUrl'),
			color = $('#color'),
			allFields = $( [] ).add( group ).add( topic ).add( logoUrl ).add( color ),
			tips = $('.validateTips');
	
		function updateTips( t ) {
			tips.text( t ).addClass( "ui-state-highlight" );
			setTimeout(function() {
				tips.removeClass( "ui-state-highlight", 1500 );
			}, 500 );
		}
		
		function checkUrl(url) {
			if(url.val().length > 0) {
				if (!isUrl(url.val())) {
					url.addClass("ui-state-error");
					updateTips("The logo URL entered is invalid.");
					return false;
				}
			}
			return true;
		}
		
		function checkBothNotFilled(group, topic) {
			if (group.val()!=-1 && topic.val().length>0) {
				group.addClass("ui-state-error");
				topic.addClass("ui-state-error");
				updateTips("Please select either a group or a topic, but not both.")
				return false;
			} else {
				return true;
			}
		}
      
      	$('#settings-dialog').dialog({
	    		autoOpen: false,
	    		modal: true,
	    		width: 450,
	    		buttons: {
	    			"Save": function() {
	    				var bValid = true;
	            		allFields.removeClass( "ui-state-error" );
	            		bValid = bValid && checkBothNotFilled(group, topic);
						bValid = bValid && checkUrl(logoUrl);
	            		if ( bValid ) {
	  					  	$.cookie('groupId', group.val());
							if (group.val() != -1) {
								$.cookie('filterName', $('#group option:selected').text());
							} else {
								$.cookie('groupId', null);
							}
							if (logoUrl.val().length > 0) {
								$.cookie('logoUrl', logoUrl.val());
							} else {
								$.cookie('logoUrl', null);
							}
							$.cookie('color', color.val());
							if (group.val()==-1 && topic.val().length==0) {
								$.cookie('filterName', null);
							}
							if (topic.val().length > 0) {
							 	getOrCreateTopicId(topic.val());
							} else {
								$.cookie('topicId', null);
								$(this).dialog("close");
		  						retrieveInitialFeed();
							}
	  					} 
	    			},
					"Reset": function() { 
						allFields.removeClass( "ui-state-error" );
						group.val(-1);
						logoUrl.val(null);
						topic.val(null);
						$.farbtastic('#colorpicker').setColor("#0092bc");
						updateTips("Select a group feed or topic feed, or apply a custom look.");
	    			},
	    			"Cancel": function() { 
	    				$(this).dialog("close"); 
	    			} 
	    		}
    	});
    	
		$('#colorpicker').farbtastic('#color');
    	$('#settings-dialog').removeClass('hidden');
    });
  </script>
	
